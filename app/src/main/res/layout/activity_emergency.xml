<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/tv_emergency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergência"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Descrição da funcionalidade -->
    <TextView
        android:id="@+id/tv_emergency_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Este botão enviará uma mensagem de emergência com sua localização para seus contatos de confiança."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_emergency_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Botão de enviar SMS de emergência -->
    <Button
        android:id="@+id/btn_send_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Emergência por SMS"
        android:textSize="20sp"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_emergency_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de enviar e-mail de emergência -->
    <Button
        android:id="@+id/btn_send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Emergência por E-mail"
        android:textSize="20sp"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_send_emergency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
