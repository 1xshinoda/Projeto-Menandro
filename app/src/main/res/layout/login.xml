<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".Activity.login_activity">

    <View
        android:id="@+id/containerlogin"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/container_edit_text_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/texttittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="396dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/containerlogin"
        app:layout_constraintEnd_toEndOf="@id/containerlogin"

        app:layout_constraintStart_toStartOf="@id/containerlogin"
        app:layout_constraintTop_toTopOf="@id/containerlogin" />

    <TextView
        android:id="@+id/textdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="357dp"
        android:text="insira suas informações"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/containerlogin"
        app:layout_constraintEnd_toEndOf="@id/containerlogin"

        app:layout_constraintStart_toStartOf="@id/containerlogin"
        app:layout_constraintTop_toBottomOf="@id/texttittle" />


    <EditText
        android:id="@+id/EditEmailLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="281dp"
        android:layout_gravity="center"
        android:background="@drawable/container_edit_text_all"
        android:drawableLeft="@drawable/email"


        android:hint="Email:"
        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/containerlogin"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintStart_toStartOf="@+id/containerlogin"
        app:layout_constraintTop_toTopOf="@+id/containerlogin" />

    <EditText
        android:id="@+id/EditLoginSenha"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        android:layout_gravity="center"
        android:background="@drawable/container_edit_text_all"
        android:drawableLeft="@drawable/lock"
        android:hint="Senha:"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@id/containerlogin"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintStart_toStartOf="@+id/containerlogin"
        app:layout_constraintTop_toBottomOf="@id/EditEmailLogin"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/editEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="181dp"

        android:layout_marginBottom="16dp"

        android:text="Esqueceu sua senha?"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editCadastro"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintStart_toStartOf="@+id/containerlogin"
        app:layout_constraintTop_toBottomOf="@+id/EditEmailLogin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="@string/EsqSenha"
        android:textColor="#0800FF"
        app:layout_constraintBottom_toTopOf="@+id/BotaoLogin"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toEndOf="@+id/editEsqueceuSenha"
        app:layout_constraintTop_toBottomOf="@+id/EditLoginSenha"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/BTcadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/Cadastro"
        android:textColor="#0800FF"
        app:layout_constraintBottom_toTopOf="@+id/BotaoLogin"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toEndOf="@+id/editCadastro"
        app:layout_constraintTop_toBottomOf="@+id/EditLoginSenha"
        app:layout_constraintVertical_bias="0.985" />

    <TextView
        android:id="@+id/editCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"

        android:layout_marginStart="54dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="158dp"
        android:text="Ainda não fez cadastro?"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"

        android:clickable="true"
        android:focusable="true"

        app:layout_constraintBottom_toBottomOf="@+id/containerlogin"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintStart_toStartOf="@+id/containerlogin"
        app:layout_constraintTop_toBottomOf="@+id/EditEmailLogin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BotaoLogin"
        style="@style/Button1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="44dp"
        android:layout_gravity="center"
        android:onClick="validarcampos"
        android:padding="10dp"
        android:text="Entrar!"
        app:layout_constraintBottom_toBottomOf="@+id/containerlogin"
        app:layout_constraintEnd_toEndOf="@+id/containerlogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/containerlogin"
        app:layout_constraintTop_toBottomOf="@+id/EditLoginSenha"
        app:layout_constraintVertical_bias="0.917" />


</androidx.constraintlayout.widget.ConstraintLayout>