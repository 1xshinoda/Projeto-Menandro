<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AZUL_PRIMARIA">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6385FB">

        <ImageButton
            android:id="@+id/voltarmenu1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/homeblack"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="" />

        <TextView
            android:id="@+id/Toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Videos"
            android:drawableLeft="@drawable/play"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="10dp" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/modulo1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Módulo 1: Introdução ao Tópico"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="16dp"/>

            <VideoView
                android:id="@+id/videoView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnPlayAudio1"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_atividades"
                    android:text="Play Áudio"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnPauseAudio1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_atividades2"
                    android:text="Pause Áudio"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/modulo2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Módulo 2: Detalhamento do Tópico"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="24dp"/>

            <VideoView
                android:id="@+id/videoView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnPlayAudio2"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_atividades"
                    android:text="Play Áudio"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnPauseAudio2"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_atividades2"
                    android:text="Pause Áudio"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>